<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:context=".Data">

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nombrePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Nombre"/>

        <TextView
            android:id="@+id/descPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Desc"/>

        <TextView
            android:id="@+id/edadPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Edad"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#873260"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sexoPerfil"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="Sexo"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_height="2dp"
            android:background="@android:color/white"></TextView>

        <TextView
            android:id="@+id/fechaPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="Fecha"/>
        <TextView
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_height="2dp"
            android:background="@android:color/white"></TextView>

        <TextView
            android:id="@+id/dirPerfil"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="Direccion"/>
        <TextView
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_height="2dp"
            android:background="@android:color/white"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Regresar"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:onClick="onClick"
                android:textColor="@android:color/white"
                android:background="#291d23"/>

            <Button
                android:id="@+id/btnMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:text="Google Maps"
                android:paddingHorizontal="10dp"
                android:onClick="onClick"
                android:textColor="@android:color/white"
                android:background="#291d23"/>

            <Button
                android:id="@+id/btnAgendar"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Agendar cumpleaÃ±os"
                android:paddingHorizontal="10dp"
                android:onClick="onClick"
                android:textColor="@android:color/white"
                android:background="#291d23"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
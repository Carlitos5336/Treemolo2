<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context="com.example.treemolo.MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:srcCompat="@mipmap/justtremolologo" />

    <TextView
        android:gravity="center"
        android:paddingVertical="0dp"
        android:layout_weight="1"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Treemolo"
        android:fontFamily="@font/otra_mas"
        android:layout_below="@+id/imageView4"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#873260"
        android:layout_below="@+id/textView4"
        android:paddingTop="40dp">
        <TextView
            android:id="@+id/text1"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-thin"
            android:textAlignment="center"/>

        <EditText
            android:layout_below="@+id/text1"
            android:textColor="@android:color/white"
            android:id="@+id/editcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginHorizontal="40dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:textColor="@android:color/white"
            android:paddingTop="40dp"
            android:layout_below="@+id/editcorreo"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Contraseña"
            android:fontFamily="sans-serif-thin"
            android:textAlignment="center"/>

        <EditText
            android:textColor="@android:color/white"
            android:id="@+id/editcontraseña"
            android:layout_below="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:ems="10"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_below="@+id/editcontraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Limpiar"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:textColor="@android:color/white"
                android:background="#291d23"/>

            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Ingresar"
                android:textColor="@android:color/white"
                android:onClick="onClick"
                android:background="#291d23"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>